<Window x:Class="Transformer_Power.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transformer_Power"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="MainText" HorizontalAlignment="Center" Text="Choose your hero" TextWrapping="Wrap" VerticalAlignment="Center" Height="145" Width="156" TextAlignment="Center" FontSize="16"/>
        <RadioButton x:Name="LeftButton" Content="300 hundred bucks" IsChecked="True" Margin="177,0,0,207" VerticalAlignment="Bottom" RenderTransformOrigin="0.729,1.61" Checked="RadioButton_Checked" FontSize="16" HorizontalAlignment="Left" Width="172"/>
        <RadioButton x:Name="RightButton" Content="leather club is on the second floor" Margin="431,0,0,207" FontSize="16" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="266"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,0,0,98" VerticalAlignment="Bottom" Height="46" Width="96" Click="Button_Click"/>

    </Grid>
</Window>
